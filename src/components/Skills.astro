---
interface Technology {
  name: string;
  logo: string;
  progress: string;
}

interface Props {
  title: string;
  technologies: Technology[];
  isProjectComponent: boolean;
}

const { title, technologies, isProjectComponent } = Astro.props;
---

<div class={`${isProjectComponent ? "rounded" : ""} ${isProjectComponent ? "px-10" : ""} flex flex-col items-center gap-4 bg-white dark:bg-gray-900 py-6 dark:text-white`}>
  <h2 class="text-xl font-bold">{title}</h2>
  <div class="flex flex-wrap justify-center items-center gap-4">
    {technologies.map(skill => (
      <div class="flex flex-col items-center">
        <div class={`w-16 h-16 relative svg-icon dark:dark-svg-filter`}>
          <img src={skill.logo} alt={skill.name} class="absolute top-0 left-0 w-full h-full" />
        </div>
        <span class="mt-2">{skill.name}</span>
      </div>
    ))}
  </div>
</div>

<style>
  .dark-svg-filter img {
    filter: invert(1);
  }
</style>
